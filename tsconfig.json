{
    "include": [
        "./src/**/*",
        "./src/typings/*"
    ],
    "files": [
        "./src/index.ts"
    ],
    "compilerOptions": {
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "test/*": [
                "./src/test/*"
            ],
            "assets/*": [
                "./src/assets/*"
            ],
            "constants/*": [
                "./src/constants/index.ts"
            ],
            "case": [
                "./src/case/*"
            ],
            "utils": [
                "./src/utils/index.ts"
            ]
        },
        "target": "es6",
        "outDir": "./dist",
        "allowJs": true,
        "alwaysStrict": true,
        "strict": true,
        "module": "es2020",
        "moduleResolution": "node",
        "suppressImplicitAnyIndexErrors":true,
    }
}